<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="3dip"
    android:layout_marginTop="3dip" >

    <TableRow
        android:id="@+id/adapter_load_dict_row_row"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/adapter_load_dict_row_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dip"
            android:layout_marginTop="3dip"
            android:background="@drawable/dict_icon_32" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dip"
            android:layout_marginTop="5dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/adapter_load_dict_row_name"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dip"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/adapter_load_dict_row_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dip"
                android:textSize="12sp" />
        </LinearLayout>
    </TableRow>

    <TableRow
        android:id="@+id/adapter_load_dict_row_row1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/adapter_load_dict_row_process"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dip"
            android:layout_marginTop="7dip"
             />

        <ImageView
            android:id="@+id/adapter_load_dict_row_load"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="3dip"
            android:layout_marginTop="7dip" />
    </TableRow>

</RelativeLayout>