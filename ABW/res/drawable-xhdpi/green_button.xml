<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 未选中 -->
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/frag_rounding_radius" />
           <gradient android:angle="270" 
                android:endColor="@color/android_green" 
                android:startColor="@color/android_light_green" />
            <stroke android:width="1px" android:color="@color/android_light_green" />
        </shape>
    </item>
    <!-- 选中 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/frag_rounding_radius" />
            <gradient android:angle="270" 
                android:endColor="@color/android_light_green" 
                android:startColor="@color/android_green" />
            <stroke android:width="1px" android:color="@color/android_light_green" />
        </shape>
    </item>

</selector>